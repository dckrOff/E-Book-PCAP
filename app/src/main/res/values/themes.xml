<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EBookPCAP" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="Theme.EBookPCAP" parent="Base.Theme.EBookPCAP" />

    <!-- Theme without ActionBar -->
    <style name="Theme.EBookPCAP.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Theme for AppBar overlay -->
    <style name="Theme.EBookPCAP.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- Theme for popup overlay -->
    <style name="Theme.EBookPCAP.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>